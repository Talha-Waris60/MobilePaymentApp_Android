<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/billService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Service"
        android:textStyle="bold"
        android:textSize="@dimen/_17msp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_12mdp"
        android:layout_marginLeft="@dimen/_16mdp"/>

        <ImageView
            android:id="@+id/serIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_18mdp"
            android:layout_marginRight="@dimen/_16mdp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/moneyCard"
            android:layout_below="@+id/billService"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170mdp"
            android:layout_marginRight="@dimen/_20mdp"
            android:layout_marginLeft="@dimen/_20mdp"
            android:layout_marginTop="@dimen/_18mdp"
            app:cardCornerRadius="@dimen/_12mdp"
            android:elevation="@dimen/_12mdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/yellowback"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/dollarSign"
                    android:layout_width="@dimen/_38mdp"
                    android:layout_height="@dimen/_38mdp"
                    android:src="@drawable/dollarsymbol"
                    android:layout_marginTop="@dimen/_25mdp"
                    android:layout_marginLeft="@dimen/_38mdp"/>

                <TextView
                    android:id="@+id/onlineElec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online Electricity"
                    android:textStyle="bold"
                    android:textSize="@dimen/_19msp"
                    android:layout_below="@id/dollarSign"
                    android:textColor="#fff"
                    android:layout_marginTop="@dimen/_15mdp"
                    android:layout_marginLeft="@dimen/_40mdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill Payment"
                    android:layout_below="@id/onlineElec"
                    android:layout_marginLeft="@dimen/_41mdp"
                    android:textSize="@dimen/_15msp"
                    android:textColor="#fff"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/yourBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Balance"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_18msp"
            android:layout_below="@id/moneyCard"
            android:layout_marginTop="@dimen/_20mdp"
            android:layout_marginLeft="@dimen/_20msp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/paymentDetails"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90mdp"
            android:layout_below="@id/yourBalance"
            android:layout_marginLeft="@dimen/_20mdp"
            android:layout_marginRight="@dimen/_20mdp"
            android:layout_marginTop="@dimen/_12mdp"
            app:cardCornerRadius="@dimen/_12mdp"
            android:elevation="@dimen/_12mdp"
            android:backgroundTint="#FFFCFC">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/billAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$5678"
                    android:textSize="@dimen/_17msp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_15mdp"
                    android:layout_marginLeft="@dimen/_20mdp"/>

                <ImageView
                    android:id="@+id/electricFlash"
                    android:layout_width="@dimen/_13mdp"
                    android:layout_height="@dimen/_13mdp"
                    android:src="@drawable/flashelectric"
                    android:layout_below="@id/billAmount"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:layout_marginLeft="@dimen/_20mdp"/>

                <TextView
                    android:id="@+id/pendingBill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City Electricity A Bill Pending"
                    android:textStyle="bold"
                    android:layout_below="@id/billAmount"
                    android:layout_toRightOf="@id/electricFlash"
                    android:layout_marginTop="@dimen/_8mdp"
                    android:layout_marginLeft="@dimen/_3mdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05-09-2022"
                    android:layout_below="@id/pendingBill"
                    android:layout_toRightOf="@id/electricFlash"
                    android:layout_marginLeft="@dimen/_3mdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_8msp"/>

                <TextView
                    android:id="@+id/pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAY"
                    android:layout_below="@id/billAmount"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_20mdp"
                    android:layout_marginTop="@dimen/_9mdp"
                    android:textColor="#FB8C00"
                    android:textSize="@dimen/_10msp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_155mdp"
            android:layout_marginLeft="@dimen/_20mdp"
            android:layout_marginRight="@dimen/_178mdp"
            android:layout_below="@id/paymentDetails"
            android:layout_marginTop="@dimen/_22mdp"
            app:cardCornerRadius="@dimen/_12mdp"
            android:elevation="@dimen/_12mdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pro5"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_145mdp"
            android:layout_height="@dimen/_115mdp"
            android:layout_below="@id/paymentDetails"
            android:layout_marginTop="@dimen/_40mdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_20mdp"
            app:cardCornerRadius="@dimen/_12mdp"
            android:elevation="@dimen/_12mdp"
            android:backgroundTint="#FFFCFC">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TextView
                android:id="@+id/timepay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00-10:00 AM"
                android:textSize="@dimen/_13msp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_15mdp"
                android:layout_marginLeft="@dimen/_18mdp"/>

            <TextView
                android:id="@+id/datePay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday November 20 "
                android:textSize="@dimen/_8msp"
                android:textStyle="bold"
                android:layout_below="@+id/timepay"
                android:layout_marginLeft="@dimen/_18mdp"/>


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Johnson Smith"
                    android:layout_below="@+id/datePay"
                    android:layout_marginTop="@dimen/_18mdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_18mdp"
                    android:textSize="@dimen/_13msp"/>

                <TextView
                    android:id="@+id/cityBill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City Electricity A Bill"
                    android:textSize="@dimen/_8msp"
                    android:textStyle="bold"
                    android:layout_below="@+id/name"
                    android:layout_marginLeft="@dimen/_18mdp"/>

                <TextView
                    android:id="@+id/checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHECKOUT"
                    android:textSize="@dimen/_9mdp"
                    android:textColor="#FB8C00"
                    android:layout_below="@id/cityBill"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_6mdp"
                    android:layout_marginRight="@dimen/_30mdp"/>

                <ImageView
                    android:layout_width="@dimen/_8mdp"
                    android:layout_height="@dimen/_8mdp"
                    android:src="@drawable/point"
                    android:layout_below="@id/cityBill"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_8mdp"
                    android:layout_marginRight="@dimen/_17mdp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>



</FrameLayout>